{
    "id": "org.kde.kmymoney",
    "runtime": "org.kde.Platform",
    "runtime-version": "6.10",
    "sdk": "org.kde.Sdk",
    "command": "kmymoney",
    "desktop-file-name-suffix": " (Nightly)",
    "rename-icon": "kmymoney",
    "copy-icon": true,
    "rename-mime-file": "x-kmymoney.xml",
    "rename-mime-icons": [
        "application-x-kmymoney"
    ],
    "finish-args": [
        "--device=dri",
        "--filesystem=home",
        "--share=ipc",
        "--share=network",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--socket=pcsc",
        "--system-talk-name=org.freedesktop.UDisks2"
    ],
    "cleanup": [
        "*.a",
        "*.la",
        "/include",
        "/lib/cmake",
        "/lib/pkgconfig",
        "/mkspecs",
        "/share/aclocal",
        "/share/doc",
        "/share/info",
        "/share/man"
    ],
    "modules": [
        {
            "name": "qgpgme",
            "buildsystem": "autotools",
            "config-opts": [
                "--enable-languages=cpp,qt6",
                "--disable-glibtest",
                "--disable-gpgconf-test",
                "--disable-gpg-test",
                "--disable-gpgsm-test",
                "--disable-g13-test"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://gnupg.org/ftp/gcrypt/gpgme/gpgme-1.24.3.tar.bz2",
                    "sha256": "bfc17f5bd1b178c8649fdd918956d277080f33df006a2dc40acdecdce68c50dd",
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 1239,
                        "stable-only": true,
                        "url-template": "https://gnupg.org/ftp/gcrypt/gpgme/gpgme-$version.tar.bz2",
                        "versions": {
                            "<": "2.0.0"
                        }
                    }
                }
            ],
            "cleanup": [
                "/bin"
            ]
        },
        {
            "name": "qtkeychain",
            "buildsystem": "cmake-ninja",
            "config-opts": [
                "-DBUILD_WITH_QT6=ON",
                "-DBUILD_TESTING=OFF"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/frankosterfeld/qtkeychain/archive/refs/tags/0.15.0.tar.gz",
                    "sha256": "f4254dc8f0933b06d90672d683eab08ef770acd8336e44dfa030ce041dc2ca22",
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 4138,
                        "stable-only": true,
                        "url-template": "https://github.com/frankosterfeld/qtkeychain/archive/refs/tags/$version.tar.gz"
                    }
                }
            ]
        },
        {
            "name": "alkimia",
            "buildsystem": "cmake-ninja",
            "config-opts": [
                "-DQT_MAJOR_VERSION=6",
                "-DBUILD_APPLETS=OFF",
                "-DBUILD_TESTING=OFF"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.kde.org/stable/alkimia/8.2.1/alkimia-8.2.1.tar.xz",
                    "sha256": "f921410e180e0a5811e1ee2926954920c6576a72b3b65f53791faa6c85fcb689",
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 378759,
                        "stable-only": true,
                        "url-template": "https://download.kde.org/stable/alkimia/$version/alkimia-$version.tar.xz"
                    }
                }
            ]
        },
        {
            "name": "kdiagram",
            "buildsystem": "cmake-ninja",
            "config-opts": [
                "-DBUILD_TESTING=OFF"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://invent.kde.org/graphics/kdiagram.git"
                }
            ]
        },
        {
            "name": "libofx",
            "buildsystem": "cmake-ninja",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/libofx/libofx/releases/download/0.10.9/libofx-0.10.9.tar.gz",
                    "sha256": "1ca89ff7d681c9edad312172ac464231a8de686e653213612f9417492cef0d37",
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 7309,
                        "stable-only": true,
                        "url-template": "https://github.com/libofx/libofx/releases/download/0.10.9/libofx-$version.tar.gz"
                    }
                }
            ],
            "cleanup": [
                "/bin"
            ],
            "modules": [
                {
                    "name": "opensp",
                    "buildsystem": "autotools",
                    "rm-configure": true,
                    "config-opts": [
                        "--disable-doc-build",
                        "--disable-static"
                    ],
                    "sources": [
                        {
                            "type": "archive",
                            "url": "https://sourceforge.net/projects/openjade/files/opensp/1.5.2/OpenSP-1.5.2.tar.gz",
                            "sha256": "57f4898498a368918b0d49c826aa434bb5b703d2c3b169beb348016ab25617ce",
                            "x-checker-data": {
                                "type": "anitya",
                                "project-id": 377818,
                                "stable-only": true,
                                "url-template": "https://sourceforge.net/projects/openjade/files/opensp/$version/OpenSP-$version.tar.gz"
                            }
                        },
                        {
                            "type": "shell",
                            "commands": [
                                "cp -p /usr/share/automake-*/config.{sub,guess} ."
                            ]
                        },
                        {
                            "type": "script",
                            "dest-filename": "autogen.sh",
                            "commands": [
                                "autoreconf -vfi"
                            ]
                        }
                    ],
                    "cleanup": [
                        "/bin"
                    ]
                },
                {
                    "name": "libxml++",
                    "buildsystem": "meson",
                    "config-opts": [
                        "-Dbuild-examples=false",
                        "-Dbuild-tests=false"
                    ],
                    "sources": [
                        {
                            "type": "archive",
                            "url": "https://download.gnome.org/sources/libxml++/2.42/libxml++-2.42.3.tar.xz",
                            "sha256": "74b95302e24dbebc56e97048e86ad0a4121fc82a43e58d381fbe1d380e8eba04",
                            "x-checker-data": {
                                "type": "gnome",
                                "name": "libxml++",
                                "versions": {
                                    "<": "2.91"
                                }
                            }
                        }
                    ],
                    "cleanup": [
                        "/bin"
                    ],
                    "modules": [
                        {
                            "name": "glibmm",
                            "buildsystem": "meson",
                            "config-opts": [
                                "-Dbuild-examples=false"
                            ],
                            "sources": [
                                {
                                    "type": "archive",
                                    "url": "https://download.gnome.org/sources/glibmm/2.66/glibmm-2.66.8.tar.xz",
                                    "sha256": "64f11d3b95a24e2a8d4166ecff518730f79ecc27222ef41faf7c7e0340fc9329",
                                    "x-checker-data": {
                                        "type": "gnome",
                                        "name": "glibmm",
                                        "versions": {
                                            "<": "2.68"
                                        }
                                    }
                                }
                            ],
                            "modules": [
                                {
                                    "name": "sigc++",
                                    "buildsystem": "meson",
                                    "config-opts": [
                                        "-Dbuild-examples=false",
                                        "-Dbuild-tests=false"
                                    ],
                                    "sources": [
                                        {
                                            "type": "archive",
                                            "url": "https://download.gnome.org/sources/libsigc++/2.12/libsigc++-2.12.1.tar.xz",
                                            "sha256": "a9dbee323351d109b7aee074a9cb89ca3e7bcf8ad8edef1851f4cf359bd50843",
                                            "x-checker-data": {
                                                "type": "gnome",
                                                "name": "libsigc++",
                                                "versions": {
                                                    "<": "2.99"
                                                }
                                            }
                                        }
                                    ]
                                }
                            ]
                        }
                    ]
                }
            ]
        },
        {
            "name": "aqbanking",
            "buildsystem": "autotools",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://www.aquamaniac.de/rdm/attachments/download/646/aqbanking-6.8.4.tar.gz",
                    "sha256": "53e297a202312dffae1091eaaa86e46a699febe0947857606bc2535adfdbf191"
                }
            ],
            "cleanup": [
                "/bin"
            ],
            "modules": [
                {
                    "name": "xmlsec1",
                    "buildsystem": "autotools",
                    "config-opts": [
                        "--disable-static"
                    ],
                    "sources": [
                        {
                            "type": "archive",
                            "url": "https://github.com/lsh123/xmlsec/releases/download/1.3.9/xmlsec1-1.3.9.tar.gz",
                            "sha256": "a631c8cd7a6b86e6adb9f5b935d45a9cf9768b3cb090d461e8eb9d043cf9b62f",
                            "x-checker-data": {
                                "type": "anitya",
                                "project-id": 5200,
                                "stable-only": true,
                                "url-template": "https://github.com/lsh123/xmlsec/releases/download/$version/xmlsec1-$version.tar.gz"
                            }
                        }
                    ],
                    "cleanup": [
                        "/bin"
                    ]
                },
                {
                    "name": "gwenhywfar",
                    "buildsystem": "autotools",
                    "config-opts": [
                        "--with-guis=qt6"
                    ],
                    "build-options": {
                        "env": {
                            "GPGRT_CONFIG": "/app/bin/gpgrt-config"
                        }
                    },
                    "sources": [
                        {
                            "type": "archive",
                            "url": "https://www.aquamaniac.de/rdm/attachments/download/630/gwenhywfar-5.14.1.tar.gz",
                            "sha256": "8916feaa99cb954f963f2cba8dd2dffe57cacf7f284daf00eab071aad6fe2ab3"
                        }
                    ],
                    "cleanup": [
                        "/bin"
                    ],
                    "modules": [
                        {
                            "name": "libgcrypt",
                            "buildsystem": "autotools",
                            "config-opts": [
                                "--disable-static"
                            ],
                            "sources": [
                                {
                                    "type": "archive",
                                    "url": "https://gnupg.org/ftp/gcrypt/libgcrypt/libgcrypt-1.11.2.tar.bz2",
                                    "sha256": "6ba59dd192270e8c1d22ddb41a07d95dcdbc1f0fb02d03c4b54b235814330aac",
                                    "x-checker-data": {
                                        "type": "anitya",
                                        "project-id": 1623,
                                        "stable-only": true,
                                        "url-template": "https://gnupg.org/ftp/gcrypt/libgcrypt/libgcrypt-$version.tar.bz2"
                                    }
                                }
                            ],
                            "cleanup": [
                                "/bin"
                            ],
                            "modules": [
                                {
                                    "name": "libgpg-error",
                                    "buildsystem": "autotools",
                                    "config-opts": [
                                        "--disable-static"
                                    ],
                                    "sources": [
                                        {
                                            "type": "archive",
                                            "url": "https://gnupg.org/ftp/gcrypt/libgpg-error/libgpg-error-1.58.tar.bz2",
                                            "sha256": "f943aea9a830a8bd938e5124b579efaece24a3225ff4c3d27611a80ce1260c27",
                                            "x-checker-data": {
                                                "type": "anitya",
                                                "project-id": 1628,
                                                "stable-only": true,
                                                "url-template": "https://gnupg.org/ftp/gcrypt/libgpg-error/libgpg-error-$version.tar.bz2"
                                            }
                                        }
                                    ],
                                    "cleanup": [
                                        "/bin",
                                        "/share/common-lisp",
                                        "/share/libgpg-error"
                                    ]
                                }
                            ]
                        }
                    ]
                }
            ]
        },
        {
            "name": "libchipcard",
            "buildsystem": "autotools",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://www.aquamaniac.de/rdm/attachments/download/382/libchipcard-5.1.6.tar.gz",
                    "sha256": "6c07f527417f7562074f99012da4d11eb4dbafd33f49e66b442ccd6e3b8cfd20"
                }
            ],
            "cleanup": [
                "/bin"
            ],
            "modules": [
                {
                    "name": "pcsc-lite",
                    "buildsystem": "meson",
                    "config-opts": [
                        "-Dlibudev=false",
                        "-Dlibsystemd=false",
                        "-Dpolkit=false"
                    ],
                    "cleanup": [
                        "/lib/libpcscspy.so",
                        "/lib/libpcsclite.so",
                        "/sbin"
                    ],
                    "sources": [
                        {
                            "type": "archive",
                            "url": "https://pcsclite.apdu.fr/files/pcsc-lite-2.4.0.tar.xz",
                            "sha256": "22307017a99e123dbecb991136783beca07966f1376d74d9ad0004ba5f81c4f1",
                            "x-checker-data": {
                                "type": "anitya",
                                "project-id": 2611,
                                "url-template": "https://pcsclite.apdu.fr/files/pcsc-lite-$version.tar.xz"
                            }
                        },
                        {
                            "type": "patch",
                            "path": "packaging/pcsc-lite-negotiate_protocol.diff"
                        }
                    ]
                }
            ]
        },
        {
            "name": "sqlcipher",
            "buildsystem": "autotools",
            "config-opts": [
                "--disable-tcl",
                "--disable-static",
                "--enable-tempstore=yes"
            ],
            "build-options": {
                "cflags": "-DSQLITE_HAS_CODEC",
                "ldflags": "-lcrypto"
            },
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/sqlcipher/sqlcipher/archive/refs/tags/v4.6.1.tar.gz",
                    "sha256": "d8f9afcbc2f4b55e316ca4ada4425daf3d0b4aab25f45e11a802ae422b9f53a3",
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 11213,
                        "stable-only": true,
                        "url-template": "https://github.com/sqlcipher/sqlcipher/archive/refs/tags/v$version.tar.gz",
                        "versions": {
                            "<": "4.7"
                        }
                    }
                }
            ],
            "cleanup": [
                "/bin"
            ],
            "modules": [
                {
                    "name": "tcl",
                    "buildsystem": "autotools",
                    "config-opts": [
                        "--disable-symbols"
                    ],
                    "sources": [
                        {
                            "type": "archive",
                            "url": "http://prdownloads.sourceforge.net/tcl/tcl8.6.17-src.tar.gz",
                            "sha256": "a3903371efcce8a405c5c245d029e9f6850258a60fa3761c4d58995610949b31",
                            "x-checker-data": {
                                "type": "anitya",
                                "project-id": 4941,
                                "stable-only": true,
                                "url-template": "http://prdownloads.sourceforge.net/tcl/tcl$version-src.tar.gz",
                                "versions": {
                                    "<": "9.0"
                                }
                            }
                        }
                    ],
                    "subdir": "unix",
                    "post-install": [
                        "chmod 755 /app/lib/libtcl*.so"
                    ],
                    "cleanup": [
                        "*"
                    ]
                }
            ]
        },
        {
            "name": "kmymoney",
            "buildsystem": "cmake-ninja",
            "config-opts": [
                "-DBUILD_WITH_QT6=ON"
            ],
            "builddir": true,
            "sources": [
                {
                    "type": "dir",
                    "path": "."
                }
            ],
            "cleanup": [
                "/share/icons/hicolor/1024x1024"
            ]
        }
    ]
}
