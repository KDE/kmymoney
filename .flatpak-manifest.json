{
    "id": "org.kde.kmymoney",
    "runtime": "org.kde.Platform",
    "runtime-version": "6.10",
    "sdk": "org.kde.Sdk",
    "command": "kmymoney",
    "desktop-file-name-suffix": " (Nightly)",
    "rename-icon": "kmymoney",
    "copy-icon": true,
    "rename-mime-file": "x-kmymoney.xml",
    "rename-mime-icons": [
        "application-x-kmymoney"
    ],
    "finish-args": [
        "--device=dri",
        "--filesystem=home",
        "--share=ipc",
        "--share=network",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--socket=pcsc",
        "--system-talk-name=org.freedesktop.UDisks2"
    ],
    "cleanup": [
        "*.a",
        "*.la",
        "/include",
        "/lib/cmake",
        "/lib/pkgconfig",
        "/mkspecs",
        "/share/aclocal",
        "/share/doc",
        "/share/info",
        "/share/man"
    ],
    "modules": [
        {
            "name": "qgpgme",
            "buildsystem": "cmake-ninja",
            "config-opts": [
                "-DBUILD_WITH_QT5=OFF",
                "-DBUILD_TESTING=OFF"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://gnupg.org/ftp/gcrypt/qgpgme/qgpgme-2.0.0.tar.xz",
                    "sha256": "15645b2475cca6118eb2ed331b3a8d9442c9d4019c3846ba3f6d25321b4a61ad",
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 378538,
                        "stable-only": true,
                        "url-template": "https://gnupg.org/ftp/gcrypt/qgpgme/qgpgme-$version.tar.xz"
                    }
                }
            ],
            "cleanup": [
                "/bin"
            ]
        },
        {
            "name": "qtkeychain",
            "buildsystem": "cmake-ninja",
            "config-opts": [
                "-DBUILD_WITH_QT6=ON",
                "-DBUILD_TESTING=OFF"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/frankosterfeld/qtkeychain/archive/refs/tags/0.15.0.tar.gz",
                    "sha256": "f4254dc8f0933b06d90672d683eab08ef770acd8336e44dfa030ce041dc2ca22",
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 4138,
                        "stable-only": true,
                        "url-template": "https://github.com/frankosterfeld/qtkeychain/archive/refs/tags/$version.tar.gz"
                    }
                }
            ]
        },
        {
            "name": "alkimia",
            "buildsystem": "cmake-ninja",
            "config-opts": [
                "-DQT_MAJOR_VERSION=6",
                "-DBUILD_APPLETS=OFF",
                "-DBUILD_TESTING=OFF"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.kde.org/stable/alkimia/8.2.1/alkimia-8.2.1.tar.xz",
                    "sha256": "f921410e180e0a5811e1ee2926954920c6576a72b3b65f53791faa6c85fcb689",
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 378759,
                        "stable-only": true,
                        "url-template": "https://download.kde.org/stable/alkimia/$version/alkimia-$version.tar.xz"
                    }
                }
            ]
        },
        {
            "name": "kdiagram",
            "buildsystem": "cmake-ninja",
            "config-opts": [
                "-DBUILD_TESTING=OFF"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://invent.kde.org/graphics/kdiagram.git"
                }
            ]
        },
        {
            "name": "libofx",
            "buildsystem": "cmake-ninja",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/libofx/libofx/releases/download/0.10.9/libofx-0.10.9.tar.gz",
                    "sha256": "1ca89ff7d681c9edad312172ac464231a8de686e653213612f9417492cef0d37",
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 7309,
                        "stable-only": true,
                        "url-template": "https://github.com/libofx/libofx/releases/download/0.10.9/libofx-$version.tar.gz"
                    }
                }
            ],
            "cleanup": [
                "/bin"
            ],
            "modules": [
                {
                    "name": "opensp",
                    "buildsystem": "autotools",
                    "rm-configure": true,
                    "config-opts": [
                        "--disable-doc-build",
                        "--disable-static"
                    ],
                    "sources": [
                        {
                            "type": "archive",
                            "url": "https://sourceforge.net/projects/openjade/files/opensp/1.5.2/OpenSP-1.5.2.tar.gz",
                            "sha256": "57f4898498a368918b0d49c826aa434bb5b703d2c3b169beb348016ab25617ce",
                            "x-checker-data": {
                                "type": "anitya",
                                "project-id": 377818,
                                "stable-only": true,
                                "url-template": "https://sourceforge.net/projects/openjade/files/opensp/$version/OpenSP-$version.tar.gz"
                            }
                        },
                        {
                            "type": "shell",
                            "commands": [
                                "cp -p /usr/share/automake-*/config.{sub,guess} ."
                            ]
                        },
                        {
                            "type": "script",
                            "dest-filename": "autogen.sh",
                            "commands": [
                                "autoreconf -vfi"
                            ]
                        }
                    ],
                    "cleanup": [
                        "/bin"
                    ]
                },
                {
                    "name": "libxml++",
                    "buildsystem": "meson",
                    "config-opts": [
                        "-Dbuild-examples=false",
                        "-Dbuild-tests=false"
                    ],
                    "sources": [
                        {
                            "type": "archive",
                            "url": "https://download.gnome.org/sources/libxml++/2.42/libxml++-2.42.3.tar.xz",
                            "sha256": "74b95302e24dbebc56e97048e86ad0a4121fc82a43e58d381fbe1d380e8eba04",
                            "x-checker-data": {
                                "type": "gnome",
                                "name": "libxml++",
                                "versions": {
                                    "<": "2.91"
                                }
                            }
                        }
                    ],
                    "cleanup": [
                        "/bin",
                        "/lib/libxml++-2.6"
                    ],
                    "modules": [
                        {
                            "name": "glibmm",
                            "buildsystem": "meson",
                            "config-opts": [
                                "-Dbuild-examples=false"
                            ],
                            "sources": [
                                {
                                    "type": "archive",
                                    "url": "https://download.gnome.org/sources/glibmm/2.66/glibmm-2.66.8.tar.xz",
                                    "sha256": "64f11d3b95a24e2a8d4166ecff518730f79ecc27222ef41faf7c7e0340fc9329",
                                    "x-checker-data": {
                                        "type": "gnome",
                                        "name": "glibmm",
                                        "versions": {
                                            "<": "2.68"
                                        }
                                    }
                                }
                            ],
                            "cleanup": [
                                "/lib/glibmm-2.4",
                                "/lib/giomm-2.4",
                                "/lib/libglibmm_generate_extra_defs*"
                            ],
                            "modules": [
                                {
                                    "name": "sigc++",
                                    "buildsystem": "meson",
                                    "config-opts": [
                                        "-Dbuild-examples=false",
                                        "-Dbuild-tests=false"
                                    ],
                                    "sources": [
                                        {
                                            "type": "archive",
                                            "url": "https://download.gnome.org/sources/libsigc++/2.12/libsigc++-2.12.1.tar.xz",
                                            "sha256": "a9dbee323351d109b7aee074a9cb89ca3e7bcf8ad8edef1851f4cf359bd50843",
                                            "x-checker-data": {
                                                "type": "gnome",
                                                "name": "libsigc++",
                                                "versions": {
                                                    "<": "2.99"
                                                }
                                            }
                                        }
                                    ],
                                    "cleanup": [
                                        "/lib/sigc++-2.0"
                                    ]
                                }
                            ]
                        }
                    ]
                }
            ]
        },
        {
            "name": "aqbanking",
            "buildsystem": "autotools",
            "sources": [
                {
                    "type": "git",
                    "url": "https://git.aquamaniac.de/git/aqbanking",
                    "commit": "689847ab12b70c46337af1f85ab06300f8df485e",
                    "tag": "6.9.1",
                    "x-checker-data": {
                        "type": "git"
                    }
                },
                {
                    "type": "shell",
                    "commands": [
                        "make -fMakefile.cvs",
                        "./configure",
                        "make typedefs",
                        "make typefiles"
                    ]
                }
            ],
            "cleanup": [
                "/bin"
            ],
            "modules": [
                {
                    "name": "xmlsec1",
                    "buildsystem": "autotools",
                    "config-opts": [
                        "--disable-static"
                    ],
                    "sources": [
                        {
                            "type": "archive",
                            "url": "https://github.com/lsh123/xmlsec/releases/download/1.3.9/xmlsec1-1.3.9.tar.gz",
                            "sha256": "a631c8cd7a6b86e6adb9f5b935d45a9cf9768b3cb090d461e8eb9d043cf9b62f",
                            "x-checker-data": {
                                "type": "anitya",
                                "project-id": 5200,
                                "stable-only": true,
                                "url-template": "https://github.com/lsh123/xmlsec/releases/download/$version/xmlsec1-$version.tar.gz"
                            }
                        }
                    ],
                    "cleanup": [
                        "/bin"
                    ]
                },
                {
                    "name": "gwenhywfar",
                    "buildsystem": "autotools",
                    "config-opts": [
                        "--with-guis=qt6"
                    ],
                    "sources": [
                        {
                            "type": "git",
                            "url": "https://git.aquamaniac.de/git/gwenhywfar",
                            "commit": "424949d0c6e61028eaccd6e46e4c0c41931c2b2f",
                            "tag": "5.14.1",
                            "x-checker-data": {
                                "type": "git"
                            }
                        },
                        {
                            "type": "shell",
                            "commands": [
                                "if test ! -f i18nsources; then echo > i18nsources; fi",
                                "autoreconf -fi -I ./m4 -I /usr/share/gettext/m4"
                            ]
                        }
                    ],
                    "cleanup": [
                        "/bin",
                        "/share/gwenbuild",
                        "/share/gwenhywfar/gwenbuild"
                    ]
                }
            ]
        },
        {
            "name": "libchipcard",
            "buildsystem": "autotools",
            "sources": [
                {
                    "type": "git",
                    "url": "https://git.aquamaniac.de/git/libchipcard",
                    "commit": "49062eb5ff54e8eddf4840969066178fe666c379",
                    "tag": "5.1.6",
                    "x-checker-data": {
                        "type": "git"
                    }
                },
                {
                    "type": "shell",
                    "commands": [
                        "make -fMakefile.cvs"
                    ]
                }
            ],
            "cleanup": [
                "/bin"
            ],
            "modules": [
                {
                    "name": "pcsc-lite",
                    "buildsystem": "meson",
                    "config-opts": [
                        "-Dlibudev=false",
                        "-Dlibsystemd=false",
                        "-Dpolkit=false"
                    ],
                    "cleanup": [
                        "/lib/libpcscspy.so",
                        "/lib/libpcsclite.so",
                        "/sbin"
                    ],
                    "sources": [
                        {
                            "type": "archive",
                            "url": "https://pcsclite.apdu.fr/files/pcsc-lite-2.4.1.tar.xz",
                            "sha256": "afd3ba68c8000d2be048dc292df99a9812df9ad2efaf0a366eea22ac1faa19a7",
                            "x-checker-data": {
                                "type": "anitya",
                                "project-id": 2611,
                                "url-template": "https://pcsclite.apdu.fr/files/pcsc-lite-$version.tar.xz"
                            }
                        }
                    ]
                }
            ]
        },
        {
            "name": "sqlcipher",
            "buildsystem": "autotools",
            "config-opts": [
                "--disable-tcl",
                "--disable-static",
                "--enable-tempstore=yes"
            ],
            "build-options": {
                "cflags": "-DSQLITE_HAS_CODEC",
                "ldflags": "-lcrypto"
            },
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/sqlcipher/sqlcipher/archive/refs/tags/v4.6.1.tar.gz",
                    "sha256": "d8f9afcbc2f4b55e316ca4ada4425daf3d0b4aab25f45e11a802ae422b9f53a3",
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 11213,
                        "stable-only": true,
                        "url-template": "https://github.com/sqlcipher/sqlcipher/archive/refs/tags/v$version.tar.gz",
                        "versions": {
                            "<": "4.7"
                        }
                    }
                }
            ],
            "cleanup": [
                "/bin"
            ],
            "modules": [
                {
                    "name": "tcl",
                    "buildsystem": "autotools",
                    "config-opts": [
                        "--disable-symbols"
                    ],
                    "sources": [
                        {
                            "type": "archive",
                            "url": "http://prdownloads.sourceforge.net/tcl/tcl8.6.17-src.tar.gz",
                            "sha256": "a3903371efcce8a405c5c245d029e9f6850258a60fa3761c4d58995610949b31",
                            "x-checker-data": {
                                "type": "anitya",
                                "project-id": 4941,
                                "stable-only": true,
                                "url-template": "http://prdownloads.sourceforge.net/tcl/tcl$version-src.tar.gz",
                                "versions": {
                                    "<": "9.0"
                                }
                            }
                        }
                    ],
                    "subdir": "unix",
                    "post-install": [
                        "chmod 755 /app/lib/libtcl*.so"
                    ],
                    "cleanup": [
                        "*"
                    ]
                }
            ]
        },
        {
            "name": "kmymoney",
            "buildsystem": "cmake-ninja",
            "config-opts": [
                "-DBUILD_WITH_QT6=ON"
            ],
            "builddir": true,
            "sources": [
                {
                    "type": "dir",
                    "path": "."
                }
            ],
            "cleanup": [
                "/share/icons/hicolor/1024x1024"
            ]
        }
    ]
}
